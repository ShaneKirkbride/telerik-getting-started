@page "/"

<h1 class="mb-3">ConfigSetup</h1>
<p class="text-muted">Use the menu bar to import XML, sync the slicer editor, or export the generated configuration.</p>

<InputFile @ref="HiddenFileInput" style="display:none" OnChange="OnFileSelectedAsync" accept=".xml" />
<InputFile @ref="OpenTapFileInput" style="display:none" OnChange="OnOpenTapSequenceSelectedAsync" accept=".tap,.json,.txt,.yaml" />

<div class="menu-bar shadow-sm" @onmouseleave="CloseMenus" @onclick:stopPropagation="true">
    <div class="menu">
        <button type="button" class="menu-toggle @GetMenuToggleClass(MenuType.File)" @onclick="() => ToggleMenu(MenuType.File)">File</button>
        @if (ActiveMenu == MenuType.File)
        {
            <div class="menu-dropdown">
                <button type="button" @onclick="TriggerFilePickerAsync">Import XML...</button>
                <button type="button" @onclick="OnLoadSampleClicked">Load sample configuration</button>
                <div class="menu-divider"></div>
                <button type="button" disabled="@(IsExporting || DeviceEditors.Count == 0)" @onclick="ExportXmlAsync">Export XML...</button>
            </div>
        }
    </div>
    <div class="menu">
        <button type="button" class="menu-toggle @GetMenuToggleClass(MenuType.Edit)" @onclick="() => ToggleMenu(MenuType.Edit)">Edit</button>
        @if (ActiveMenu == MenuType.Edit)
        {
            <div class="menu-dropdown">
                <button type="button" @onclick="OnApplyXmlClicked" disabled="@string.IsNullOrWhiteSpace(XmlContent)">Apply XML to UI</button>
                <button type="button" @onclick="OnUpdateXmlClicked" disabled="@(DeviceEditors.Count == 0)">Update XML from UI</button>
                <div class="menu-divider"></div>
                <button type="button" @onclick="OnResetDeviceClicked" disabled="@(SelectedDevice is null)">Reset selected device</button>
            </div>
        }
    </div>
    <div class="menu">
        <button type="button" class="menu-toggle @GetMenuToggleClass(MenuType.View)" @onclick="() => ToggleMenu(MenuType.View)">View</button>
        @if (ActiveMenu == MenuType.View)
        {
            <div class="menu-dropdown">
                <button type="button" @onclick="ToggleXmlPreview">@(IsXmlPreviewVisible ? "Hide XML preview" : "Show XML preview")</button>
            </div>
        }
    </div>
</div>

<div class="page-body" @onclick="CloseMenus">
    @if (!string.IsNullOrWhiteSpace(ErrorMessage))
    {
        <div class="alert alert-danger" role="alert">@ErrorMessage</div>
    }
    else if (!string.IsNullOrWhiteSpace(SuccessMessage))
    {
        <div class="alert alert-success" role="alert">@SuccessMessage</div>
    }

    <div class="row g-4 align-items-stretch source-workspace-row">
        <div class="col-12 col-lg-4 col-xxl-3">
            <div class="card shadow-sm h-100 source-stack-card">
                <div class="card-header d-flex justify-content-between align-items-center flex-wrap gap-2">
                    <div>
                        <div class="fw-semibold">Sources</div>
                        <p class="text-muted small mb-0">Stacked view keeps every source one click away.</p>
                    </div>
                    <button class="btn btn-primary btn-sm" type="button" disabled="@(IsUploading || DeviceEditors.Count == 0)" @onclick="UploadAllSourcesAsync">
                        @(IsUploading ? "Updating..." : "Update all sources")
                    </button>
                </div>
                <div class="card-body">
                    <p class="card-text">Select any source on the left to load its parameters in the editor tab.</p>
                    @if (DeviceEditors.Count == 0)
                    {
                        <p class="text-muted mb-0">No sources are available. Import XML to start editing.</p>
                    }
                    else
                    {
                        <div class="source-stack" role="listbox" aria-label="Configured sources">
                            @foreach (var entry in DeviceEditors.Select((device, index) => new { device, index }))
                            {
                                <button
                                    type="button"
                                    class="@GetSourceListItemClass(entry.device)"
                                    aria-pressed="@IsDeviceSelected(entry.device)"
                                    @onclick="() => SelectDevice(entry.device)">
                                    <span class="source-list-index">@($"{entry.index + 1:00}")</span>
                                    <div class="source-list-summary">
                                        <div class="source-list-title">@entry.device.Name</div>
                                        <div class="source-list-meta">
                                            <span>Source <strong>@FormatDefault(CurrentOrDefault(entry.device.Source, entry.device.DefaultSource) ?? string.Empty)</strong></span>
                                            <span>Mode <strong>@FormatDefault(CurrentOrDefault(entry.device.Mode, entry.device.DefaultMode) ?? string.Empty)</strong></span>
                                        </div>
                                    </div>
                                    <span class="badge text-bg-light" aria-label="Parameter count">@entry.device.Parameters.Count</span>
                                </button>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="col-12 col-lg-8 col-xxl-9">
            <div class="card shadow-sm h-100 workspace-card">
                <div class="card-header">
                    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3">
                        <div>
                            <div class="fw-semibold">Workspace</div>
                            <p class="text-muted small mb-0">Use the tabs to switch between source editing and SCPI tooling.</p>
                        </div>
                        <div class="nav nav-pills editor-tabs" role="tablist">
                            <button
                                id="workspaceSourceTab"
                                type="button"
                                class="@GetEditorWorkspaceTabClass(EditorWorkspaceTab.SourceEditor)"
                                role="tab"
                                aria-controls="sourceEditorPane"
                                aria-selected="@EditorWorkspace.IsActive(EditorWorkspaceTab.SourceEditor)"
                                @onclick="() => SetEditorWorkspaceTab(EditorWorkspaceTab.SourceEditor)">Source editor</button>
                            <button
                                id="workspaceScpiTab"
                                type="button"
                                class="@GetEditorWorkspaceTabClass(EditorWorkspaceTab.ScpiWorkspace)"
                                role="tab"
                                aria-controls="scpiWorkspacePane"
                                aria-selected="@EditorWorkspace.IsActive(EditorWorkspaceTab.ScpiWorkspace)"
                                @onclick="() => SetEditorWorkspaceTab(EditorWorkspaceTab.ScpiWorkspace)">SCPI workspace</button>
                        </div>
                    </div>
                </div>
                <div class="card-body d-flex flex-column gap-4">
                    <div class="tab-content editor-tab-content flex-grow-1" id="editorWorkspaceContent">
                        <div class="@GetEditorWorkspacePaneClass(EditorWorkspaceTab.SourceEditor)" role="tabpanel" id="sourceEditorPane" aria-labelledby="workspaceSourceTab">
                            @{
                                var activeDevice = SelectedDevice;
                            }
                            @if (activeDevice is null)
                            {
                                <div class="source-detail-empty text-muted">
                                    Select a source on the left to edit its configuration.
                                </div>
                            }
                            else
                                    {
                                        <div class="source-detail-panel">
                                            <div class="source-detail-header">
                                                <div>
                                                    <div class="source-detail-title">@activeDevice.Name</div>
                                            <div class="source-card-meta">
                                                <span>Source <strong>@FormatDefault(CurrentOrDefault(activeDevice.Source, activeDevice.DefaultSource) ?? string.Empty)</strong></span>
                                                <span>Mode <strong>@FormatDefault(CurrentOrDefault(activeDevice.Mode, activeDevice.DefaultMode) ?? string.Empty)</strong></span>
                                            </div>
                                        </div>
                                        <div class="source-detail-actions">
                                            <button class="btn btn-outline-primary btn-sm" type="button" disabled="@IsUploading" @onclick="() => UploadSourceAsync(activeDevice)">
                                                @(IsUploading ? "Updating..." : "Update this source")
                                            </button>
                                            <button class="btn btn-link btn-sm text-danger" type="button" @onclick="() => ResetDevice(activeDevice)">Reset to defaults</button>
                                        </div>
                                    </div>

                                    <div class="slicer-section mb-4">
                                        <h6 class="slicer-section-title">General</h6>
                                        <div class="row g-3">
                                            <div class="col-sm-6">
                                                <label class="form-label">Arb</label>
                                                <InputText class="form-control form-control-sm" @bind-Value="activeDevice.Source" @bind-Value:event="oninput" />
                                                <div class="form-text">Default: <code>@FormatDefault(activeDevice.DefaultSource)</code></div>
                                            </div>
                                            <div class="col-sm-6">
                                                <label class="form-label">Mode</label>
                                                <InputText class="form-control form-control-sm" @bind-Value="activeDevice.Mode" @bind-Value:event="oninput" />
                                                <div class="form-text">Default: <code>@FormatDefault(activeDevice.DefaultMode)</code></div>
                                            </div>
                                            <div class="col-sm-6">
                                                <label class="form-label">Frequency</label>
                                                <InputText class="form-control form-control-sm" @bind-Value="activeDevice.Frequency" @bind-Value:event="oninput" />
                                                <div class="form-text">Default: <code>@FormatDefault(activeDevice.DefaultFrequency)</code></div>
                                            </div>
                                            <div class="col-sm-6">
                                                <label class="form-label">Power</label>
                                                <InputText class="form-control form-control-sm" @bind-Value="activeDevice.Power" @bind-Value:event="oninput" />
                                                <div class="form-text">Default: <code>@FormatDefault(activeDevice.DefaultPower)</code></div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="slicer-section mb-4">
                                        <h6 class="slicer-section-title">Instrument connection</h6>
                                        <div class="row g-3">
                                            <div class="col-md-4">
                                                <label class="form-label">Protocol</label>
                                                <InputSelect class="form-select form-select-sm" @bind-Value="activeDevice.Connection.Protocol" @onchange="_ => OnConnectionChanged(activeDevice)">
                                                    <option value="HiSLIP">HiSLIP</option>
                                                    <option value="TCPIP-SOCKET">TCPIP-SOCKET</option>
                                                </InputSelect>
                                                <div class="form-text">HiSLIP over TCP/IP or raw socket control.</div>
                                            </div>
                                            <div class="col-md-5">
                                                <label class="form-label">TCP/IP Address</label>
                                                <InputText class="form-control form-control-sm" @bind-Value="activeDevice.Connection.Host" @bind-Value:event="oninput" @onchange="_ => OnConnectionChanged(activeDevice)" placeholder="192.168.0.20" />
                                                <div class="form-text">Aligns with the instrument's LAN address.</div>
                                            </div>
                                            <div class="col-md-3">
                                                <label class="form-label">Port</label>
                                                <InputText class="form-control form-control-sm" @bind-Value="activeDevice.Connection.Port" @bind-Value:event="oninput" @onchange="_ => OnConnectionChanged(activeDevice)" placeholder="4880" />
                                                <div class="form-text">HiSLIP defaults to 4880/4881; sockets vary by instrument.</div>
                                            </div>
                                        </div>
                                        <p class="small text-muted mb-0 mt-2">VISA resource preview: <code>@activeDevice.Connection.BuildVisaResourceAddress()</code></p>
                                    </div>

                                    <div class="slicer-section flex-grow-1 d-flex flex-column">
                                        <h6 class="slicer-section-title">Parameters</h6>
                                        @if (activeDevice.Parameters.Count == 0)
                                        {
                                            <p class="text-muted">No additional parameters have been defined for this device.</p>
                                        }
                                        else
                                        {
                                            <div class="table-responsive slicer-parameter-table flex-grow-1">
                                                <table class="table table-sm align-middle mb-0">
                                                    <thead>
                                                        <tr>
                                                            <th scope="col" style="width: 35%">Name</th>
                                                            <th scope="col" style="width: 35%">Value</th>
                                                            <th scope="col">Default</th>
                                                            <th scope="col" class="text-end">Reset</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @foreach (var parameter in activeDevice.Parameters)
                                                        {
                                                            <tr>
                                                                <th scope="row">@parameter.Name</th>
                                                                <td>
                                                                    <InputText class="form-control form-control-sm" @bind-Value="parameter.Value" @bind-Value:event="oninput" />
                                                                </td>
                                                                <td class="text-muted small"><code>@FormatDefault(parameter.DefaultValue)</code></td>
                                                                <td class="text-end">
                                                                    <button type="button" class="btn btn-link btn-sm" @onclick="() => ResetParameter(parameter)">Reset</button>
                                                                </td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                        <div class="@GetEditorWorkspacePaneClass(EditorWorkspaceTab.ScpiWorkspace)" role="tabpanel" id="scpiWorkspacePane" aria-labelledby="workspaceScpiTab">
                            <div class="scpi-pane">
                                <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3 mb-3">
                                    <div>
                                        <div class="fw-semibold">SCPI workspace</div>
                                        <p class="text-muted small mb-0">Review generated commands or interact with instruments when needed.</p>
                                    </div>
                                    <div class="nav nav-pills scpi-tabs" role="tablist">
                                        <button
                                            id="scpiCommandsTab"
                                            type="button"
                                            class="@GetScpiTabClass(ScpiWorkspaceTab.Commands)"
                                            role="tab"
                                            aria-controls="scpiCommandsPane"
                                            aria-selected="@ScpiWorkspace.IsActive(ScpiWorkspaceTab.Commands)"
                                            @onclick="() => SetScpiTab(ScpiWorkspaceTab.Commands)">Generated commands</button>
                                        <button
                                            id="scpiInstrumentTab"
                                            type="button"
                                            class="@GetScpiTabClass(ScpiWorkspaceTab.Instrument)"
                                            role="tab"
                                            aria-controls="scpiInstrumentPane"
                                            aria-selected="@ScpiWorkspace.IsActive(ScpiWorkspaceTab.Instrument)"
                                            @onclick="() => SetScpiTab(ScpiWorkspaceTab.Instrument)">Instrument I/O</button>
                                    </div>
                                </div>

                                <div class="tab-content scpi-tab-content" id="scpiWorkspaceContent">
                                    <div class="@GetScpiPaneClass(ScpiWorkspaceTab.Commands)" role="tabpanel" id="scpiCommandsPane" aria-labelledby="scpiCommandsTab">
                                        @if (GeneratedCommands.Count == 0)
                                        {
                                            <p class="text-muted mb-0">Commands will appear here after a successful parse.</p>
                                        }
                                        else
                                        {
                                            <div class="table-responsive">
                                                <table class="table table-sm table-striped mb-0">
                                                    <thead>
                                                        <tr>
                                                            <th scope="col" style="width:6rem">#</th>
                                                            <th scope="col">Command</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @foreach (var entry in GeneratedCommands.Select((command, index) => new { command, index }))
                                                        {
                                                            <tr>
                                                                <th scope="row">@(entry.index + 1)</th>
                                                                <td><code>@entry.command.Text</code></td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>
                                        }
                                    </div>
                                    <div class="@GetScpiPaneClass(ScpiWorkspaceTab.Instrument)" role="tabpanel" id="scpiInstrumentPane" aria-labelledby="scpiInstrumentTab">
                                        <div class="instrument-connection">
                                            <div class="row g-3 align-items-end">
                                                <div class="col-md-8">
                                                    <label class="form-label">Instrument address</label>
                                                    <InputText class="form-control form-control-sm" @bind-Value="InstrumentResourceAddress" @bind-Value:event="oninput" placeholder="TCPIP0::127.0.0.1::inst0::INSTR" />
                                                    <div class="form-text">Commands are sent through Keysight IO Libraries (VISA).</div>
                                                </div>
                                                <div class="col-md-4 d-flex flex-column gap-2 text-md-end">
                                                    <button class="btn btn-outline-primary btn-sm" type="button" @onclick="ExecuteGeneratedCommandsOnInstrumentAsync" disabled="@(IsInstrumentBusy || GeneratedCommands.Count == 0)">
                                                        @(IsInstrumentBusy ? "Streaming..." : "Run generated commands")
                                                    </button>
                                                    <button class="btn btn-outline-secondary btn-sm" type="button" disabled="@IsInstrumentBusy" @onclick="TriggerSequencePickerAsync">Run OpenTAP sequence...</button>
                                                </div>
                                            </div>
                                            @if (LastInstrumentExecution is not null)
                                            {
                                                <p class="instrument-summary small text-muted mb-0 mt-2">
                                                    Last run <strong>@(LastInstrumentExecution.SequenceName ?? "Ad-hoc batch")</strong>
                                                    sent @LastInstrumentExecution.CommandCount command(s) to
                                                    <code>@LastInstrumentExecution.ResourceAddress</code>
                                                    in @LastInstrumentExecution.Duration.TotalMilliseconds.ToString("F0") ms.
                                                </p>
                                            }
                                        </div>

                                        <div class="custom-command-section">
                                            <h6 class="slicer-section-title">Custom instrument commands</h6>
                                            <InputTextArea class="form-control form-control-sm custom-command-input" rows="3" @bind-Value="CustomCommandText" @bind-Value:event="oninput" placeholder="*IDN?&#10;SOUR1:FREQ 1GHz" />
                                            <div class="d-flex justify-content-between align-items-center mt-2 flex-wrap gap-2">
                                                <span class="form-text">Use this area for instrument-specific overrides or troubleshooting.</span>
                                                <button class="btn btn-outline-secondary btn-sm" type="button" @onclick="SendCustomCommandsAsync" disabled="@(IsInstrumentBusy || string.IsNullOrWhiteSpace(CustomCommandText))">Send to instrument</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-end gap-2 flex-wrap">
                        <button class="btn btn-secondary" type="button" @onclick="SyncEditorsToXml" disabled="@(DeviceEditors.Count == 0)">Update XML</button>
                        <button class="btn btn-primary" @onclick="GenerateCommandsAsync" disabled="@IsProcessing">@GenerateButtonLabel</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@if (IsXmlPreviewVisible)
{
    <div class="card shadow-sm mt-4">
        <div class="card-header fw-semibold">XML preview</div>
        <div class="card-body">
            @if (string.IsNullOrWhiteSpace(XmlContent))
            {
                <p class="text-muted mb-0">No XML has been imported or generated yet.</p>
            }
            else
            {
                <pre class="xml-preview">@XmlContent</pre>
            }
        </div>
    </div>
}

<details class="mt-4">
    <summary class="fw-semibold">Schema summary</summary>
    @if (SchemaSummaryDeviceName is null)
    {
        <p class="mb-1 text-muted">No instruments are available yet. Import XML or load a sample to view the schema.</p>
    }
    else
    {
        <p class="mb-1">The configuration for <strong>@SchemaSummaryDeviceName</strong> must follow the embedded schema:</p>
        <pre class="bg-body-tertiary p-3 small">@SchemaSummaryXml</pre>
    }
</details>

